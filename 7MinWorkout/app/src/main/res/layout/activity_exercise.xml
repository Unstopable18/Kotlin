<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainConstraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/background_img"
    tools:context=".ExerciseActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@drawable/bg_gradient"
        />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBarExercise"
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:theme="@style/ToolBarTheme"
        android:fontFamily="sans-serif-smallcaps"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@color/primary"
        />
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GET READY FOR"
        android:layout_margin="16dp"
        android:fontFamily="sans-serif-smallcaps"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="45dp"
        android:paddingLeft="45dp"
        android:textStyle="bold"
        android:background="@drawable/yellow_tv_bg"
        app:layout_constraintTop_toBottomOf="@id/toolBarExercise"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/flProgressBar"
        />
    <FrameLayout
        android:id="@+id/flProgressBar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:background="@drawable/item_circular_color_accent_border"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvUpExercise"

        >
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:progressBarStyleHorizontal"
            android:background="@drawable/circular_progressbar_gray"
            android:progressDrawable="@drawable/circular_progressbar"
            android:indeterminate="false"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:max="10"
            android:progress="100"
            android:rotation="-90"
            />
        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/item_circular_color_accent_bg"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-smallcaps"
                android:textSize="42sp"
                android:textStyle="bold"
                android:text="10"
                />
        </LinearLayout>
    </FrameLayout>
    <TextView
        android:id="@+id/tvUpExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Upcoming Exercise Name\n"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-smallcaps"
        android:textSize="22sp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="45dp"
        android:paddingLeft="45dp"
        android:textStyle="bold"
        android:background="@drawable/yellow_tv_bg"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/flProgressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lottieAnimationView"
        />
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="wrap_content"
            android:layout_height="370dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="water_json.json"
            app:lottie_loop="true"
            app:lottie_speed="1"
            app:layout_constraintTop_toBottomOf="@id/tvUpExercise"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

</androidx.constraintlayout.widget.ConstraintLayout>